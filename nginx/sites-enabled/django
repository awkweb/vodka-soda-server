upstream django {
    server unix:/home/django/server.sock;
}

server {

	location = /favicon.ico {
	    access_log off;
	    log_not_found off;
	}

    location /static/admin/ {
        types {
            text/css        css;
            text/javascript js;
            image/svg+xml	svg;
        }
        alias /home/django/static/admin/;
    }

    location /static/gis/ {
        types {
            text/css        css;
            text/javascript js;
            image/png	    png;
        }
        alias /home/django/static/gis/;
    }

    location /static/rest_framework/ {
        types {
            text/css        css;
            text/javascript js;
            image/png	    png;
        }
        alias /home/django/static/rest_framework/;
    }

    location /static/ {
        alias /home/django/static/;
    }

    location / {
		include		uwsgi_params;
		uwsgi_pass  django;
    }

}
